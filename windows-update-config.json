            "smtpServer": "",
            "smtpPort": 587,
            "emailFrom": "",
            "emailTo": [],
            "notifyOnSuccess": false,
            "notifyOnFailure": true,
            "notifyOnReboot": false
        },
        "advanced": {
            "enableDebugMode": false,
            "enableTestMode": false,
            "skipWin11UpgradeBypass": false,
            "customScriptPath": "C:\\Scripts",
            "enableBackupBeforeUpdates": false,
            "backupLocation": "C:\\Backups\\WindowsUpdate",
            "enableRollbackCapability": false
        }
    },
    "metadata": {
